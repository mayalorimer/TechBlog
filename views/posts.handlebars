<div class="card">
    <div class="card-header">
       <h4>{{post.title}}</h4>
        <p>Posted by {{post.user.username}}</p>
    </div>
        <p class="card-body">{{post.description}}</p>
    <h6 class="p-2">Comments</h6>
    {{#each post.comment}}
    <p class="card-body">{{comment}}</p>
    {{/each}}
</div>